<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/party"
    tools:context="com.example.ofek.nightout2.MainActivity">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.584">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/login_textview_text"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/usernameET_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username Or Email"
            android:paddingTop="3dp"
            android:textSize="16sp"
            android:background="@android:drawable/edit_text"/>

        <EditText
            android:id="@+id/passwordET_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please enter your password"
            android:textSize="16sp"
            android:background="@android:drawable/edit_text"/>

        <Button
            android:id="@+id/loginBtn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_button_text" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
